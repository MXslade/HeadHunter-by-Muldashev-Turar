@model HeadHunter2.Models.CV
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />

<h2>Create New Job Experience for "@Model.Title"</h2>

@using (Html.BeginForm("Create", "JobExperience", FormMethod.Post))
{
    <div class="form-group">
        <label>Company Name:</label>
        <input type="text" name="companyName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Begin Date:</label>
        <input type="text" name="beginDate" class="form-control" id="datepicker1"/>
    </div>
    <div class="form-group">
        <label>End Date:</label>
        <input type="text" name="endDate" class="form-control" id="datepicker2"/>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3" name="isActive">
        <label class="form-check-label" for="inlineCheckbox3">Is Active?</label>
    </div>
    <div class="form-group">
        <label>Position:</label>
        <input type="text" name="position" class="form-control" />
    </div>
    <input type="hidden" name="cvId" value="@Model.Id" />
    <input type="submit" value="Submit" class="btn btn-success" />
}

<script src='@Url.Content("~/Scripts/jquery-3.5.1.min.js")' type="text/javascript"></script>
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>

<script>
    $("#datepicker1").datepicker();
    $("#datepicker2").datepicker();
</script>