@model HeadHunter2.Models.CV
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Education for "@Model.Title"</h2>

@using (Html.BeginForm("Create", "Education", FormMethod.Post))
{
    <div class="form-group">
        <label>Place:</label>
        <input type="text" name="place" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Faculty:</label>
        <input type="text" name="faculty" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Speciality:</label>
        <input type="text" name="speciality" class="form-control" />
    </div>
    <div class="form-group">
        <label>Level:</label>
        <input type="text" name="level" class="form-control" />
    </div>
    <div class="form-group">
        <label>Year of Completion:</label>
        <input type="text" name="yearOfCompletion" class="form-control" />
    </div>
    <input type="hidden" name="cvId" value="@Model.Id"/>
    <input type="submit" value="Submit" class="btn btn-success" />
}
